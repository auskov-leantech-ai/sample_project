<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Theme.FullScreenDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="colorPrimary">@color/colorButtonDialog</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="actionMenuTextColor">@color/teal_700</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation.Window</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="DialogAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_down</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_down</item>
    </style>

    <style name="AppTheme.ButtonBlack" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="colorButtonNormal">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/dp_32</item>
        <item name="android:paddingEnd">@dimen/dp_32</item>
        <item name="android:background">@drawable/background_button_black</item>
    </style>

    <style name="AppTheme.ButtonWhite" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/dp_32</item>
        <item name="android:paddingEnd">@dimen/dp_32</item>
        <item name="android:background">@drawable/background_button_white</item>
    </style>

    <style name="Edit.Filled" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background_edit_text</item>
    </style>

    <style name="Text.Dialog" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_28</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Heading.Filled" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_36</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>

    <style name="TextAppearance.28" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_28</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextDetailsImage.28" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_28</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
